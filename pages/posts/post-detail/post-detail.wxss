.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}
.audio{
  width:102rpx;
  height:102rpx;
  position:absolute;
  left:50%;
  margin-left:-51rpx;
  top:180rpx;
  opacity: .6;
}
.author-data {
  display: flex;
  margin-left: 30rpx;
  margin-top: 20rpx;
  align-items: center;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  border-radius: 100%;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.like-img{
  width:70rpx;
  height:70rpx;
}
.share-img {
  margin-left: 30rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #00a7f5;
  border-radius: 100%;
  padding: 20rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 35rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
}
