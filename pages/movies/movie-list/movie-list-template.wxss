@import "../movie/movie-template.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.inner-container {
  margin: 0 auto 20rpx;
}

.movies-container {
  display: flex;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.slogan {
  font-size: 24rpx;
}

.more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
